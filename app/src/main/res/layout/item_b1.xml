            android:id="@+id/tv_1"
            android:layout_gravity="bottom"
            android:text=" - "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_2"
            android:layout_gravity="bottom"
            android:text="ma1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:layout_marginLeft="260dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
